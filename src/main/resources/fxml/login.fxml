<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.login">
    <children>
        <Pane layoutX="2.0" layoutY="2.0" prefHeight="200.0" prefWidth="380.0">
            <children>

                <Label layoutX="100" layoutY="25"
                       text="Đăng nhập tài khoản" textAlignment="CENTER">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Label>

                <Label layoutX="35.0" layoutY="77.0"
                       text="Tài khoản" />

                <TextField fx:id="idEmployee"
                           layoutX="115.0" layoutY="73.0"
                           prefHeight="25.0" prefWidth="231.0" />

                <Label layoutX="35.0" layoutY="107.0"
                       text="Password" />

                <PasswordField fx:id="passwordEmployee"
                               layoutX="115.0" layoutY="103.0"
                               prefHeight="25.0" prefWidth="231.0" />

                <Button fx:id="LoginButton"
                        onAction="#login"
                        text="Đăng nhập"
                        layoutX="271.0" layoutY="149.0"/>

            </children>
        </Pane>
    </children>
</AnchorPane>
